/* Light Theme */
QMainWindow {
    background-color: #f0f0f0;
    color: #333333;
}
QLabel {
    color: #333333;
}
QPushButton {
    background-color: #e0e0e0;
    color: #333333;
    border: 1px solid #cccccc;
    padding: 5px;
    border-radius: 3px;
}
QPushButton:hover {
    background-color: #d0d0d0;
}
QTextEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
}
